{
	"kind": "ReplicationController",
	"apiVersion": "v1",
	"metadata": {
		"name": "tibcobe",
		"labels": {
			"tier": "backend",
			"name": "tibcobe"
		}
	},
	"spec": {
		"replicas": 2,
		"selector": {
			"app": "tibcobe"
		},
		"template": {
			"metadata": {
				"name": "tibcobe",
				"labels": {
					"tier": "backend",
					"app": "tibcobe"
				}
			},
			"spec": {
				"volumes": [
					{
						"name": "beconfig",
						"hostPath": {
							"path": "/home/core/be"
						}
					}
				],
				"containers": [
					{
						"name": "k8be",
						"image": "ddr.tibco.com:5000/businessevents",
						"volumeMounts": [
							{
								"name": "beconfig",
								"readOnly": false,
								"mountPath": "/data/be"
							}
						],
						"env": [
							{
								"name": "BE_ENGINE_EAR_1",
								"value": "/data/be/sample.ear"
							},
							{
								"name": "BE_ENGINE_CDD_1",
								"value": "/data/be/sample.cdd"
							},
							{
								"name": "BE_ENGINE_UNIT_1",
								"value": "sample-inf"
							},
							{
								"name": "BE_ENGINE_TRA_1",
								"value": "/data/be/be-engine.tra"
							},
							{
								"name": "BE_ENGINE_JMX_1",
								"value": "9990"
							}
						],
						"ports": [
							{
								"containerPort": 7000
							}
						]
					}
				]
			}
		}
	}	
}